# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /search                     controllers.Application.submit
GET     /search/                    controllers.Application.search(arg1: Option[String], rel: Option[String], arg2: Option[String], filter: String, page: Int, debug: Boolean ?= false)
GET     /results/                   controllers.Application.results(arg1: Option[String], rel: Option[String], arg2: Option[String], filter: String, page: Int, debug: Boolean ?= false)
GET     /sentences/                 controllers.Application.sentences(arg1: Option[String], rel: Option[String], arg2: Option[String], title: String)
GET     /logs/:year/:month/:day     controllers.Application.logs(year: Int, month: Int, day: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
