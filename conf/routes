# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index(reload: Boolean ?= false)
GET     /search                     controllers.Application.submit(debug: Boolean ?= false)
GET     /search/                    controllers.Application.search(question: String, parser: String, filter: String ?= "all", page: Int ?= 0, debug: Boolean ?= false, log: Boolean ?= true)
GET     /results/                   controllers.Application.results(question: String, parser: String, filter: String ?= "all", page: Int ?= 0, ppIndex: Option[Int] ?= None, justResults: Boolean, debug: Boolean ?= false)
GET     /sentences/                 controllers.Application.sentences(question: String, parser: String, title: String, maxSentenceCount: Int, ppIndex: Option[Int] ?= None, debug: Boolean ?= false)
GET     /logs                       controllers.Application.logsFromDate()
GET     /logs/:year/:month/:day     controllers.Application.logs(year: Int, month: Int, day: Int)

# Technical, TODO add support for these
#### GET     /json/                      controllers.Application.json(arg1: Option[String], rel: Option[String], arg2: Option[String], count: Int ?= 25, corpora: Option[String] ?= None)
#### GET     /instances/                 controllers.Application.instancesJson
#### POST    /instances/                 controllers.Application.instancesJsonSubmit

# Map static resources from the /public folder to the /assets URL path
GET     /robots.txt                 controllers.Assets.at(path="/public", file="robots.txt")
GET     /assets/*file               controllers.Assets.at(path="/public", file)